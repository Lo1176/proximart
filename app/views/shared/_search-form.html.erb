<div class="container-search-bar">
  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-full">
        <i class="fas fa-search"></i>
      </button>
    </div>

    <div class="dates-form">
      <div class="mr-1">
        <%= f.input :start_date, as: :string, required: false, label: false, input_html: {class: "datepicker"}, placeholder: 'Quand?'
        %>
      </div>
    </div>

    <div class="select-distance">
      <%= f.input :distance, collection: [ ['2km', 2], ['5km', 5], ['10km', 10]  ], required: false, label: false  %>
    </div>

    <div class="select-tags">
      <input type="hidden" name="post[categories][]" value="">

      <div class="tag-choices">
          <% tags.each do |tag| %>
            <input hidden type="checkbox" value="<%= tag %>" name="filter[tags][]" id="post_tags_<%= tag %>">
            <label class="tag-choice" for="post_tags_<%= tag %>">
              <%= tag %>
            </label>
          <% end %>

        </div>

  <% end %>


</div>


